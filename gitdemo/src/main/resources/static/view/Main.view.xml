<mvc:View
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="samhitha.controller.Main">
	<Page title="Welcome to My App">
		<Button text="loadData" press="onLoadData"></Button>

		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Company Name" />
				<Input id="name" value="{/postPayload/companyName}" />
				<Label text="First Name/Last Name" />
				<Input value="{/postPayload/firstName}">
				</Input>
				<Input value="{/postPayload/lastName}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="Email" />
				<Input value="{/postPayload/email}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="Website" />
				<Input value="{/postPayload/website}" />
				<Label text="GSTNo" />
				<Input value="{/postPayload/gstNo}" />
			</f:content>
		</f:SimpleForm>
		
		<t:Table id="idTable">
			<t:columns>
				<t:Column>
					<t:label>
						<Text text="Name"></Text>
					</t:label>
					<t:template>
						<Text text="{firstName} {lastName}"></Text>
					</t:template>
				</t:Column>
				<t:Column>
					<t:label>
						<Text text="Company Name"></Text>
					</t:label>
					<t:template>
						<Text text="{companyName}"></Text>
					</t:template>
				</t:Column>
				<t:Column>
					<t:label>
						<Text text="Email"></Text>
					</t:label>
					<t:template>
						<Text text="{email}"></Text>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
		<footer>
			<Toolbar>
				<Button text="Save" press="onSave"></Button>
			</Toolbar>
		</footer>

	</Page>
</mvc:View>